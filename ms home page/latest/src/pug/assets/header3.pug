header.header.cd-morph-dropdown
	.container-fluid
		.row.justify-content-between.align-items-center
			.col-12
				.row.header__top.main-nav.justify-content-end.align-items-center
					.col-auto
						ul.list-inline
							li.list-inline-item.has-dropdown.bg-blue.top-search(data-content="Location")
